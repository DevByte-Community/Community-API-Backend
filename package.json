{
  "name": "community-api-backend",
  "version": "1.0.0",
  "description": "Backend repository for Devbyte community online platform",
  "main": "src/server.js",
  "scripts": {
    "test": "jest",
    "start:prod": "node src/server.js",
    "start:dev": "nodemon",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "migration:generate": "sequelize-cli migration:generate --name"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "helmet": "^7.0.0",
    "morgan": "^1.10.1",
    "nodemon": "^3.1.10",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.0",
    "prettier": "^3.3.0",
    "supertest": "^7.1.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DevByte-Community/Community-API-Backend.git"
  },
  "keywords": [
    "community",
    "api",
    "express",
    "backend",
    "open-source"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DevByte-Community/Community-API-Backend/issues"
  },
  "homepage": "https://github.com/DevByte-Community/Community-API-Backend#readme",
  "engines": {
    "node": ">=18.0.0"
  }
}
