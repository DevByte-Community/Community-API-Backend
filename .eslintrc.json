{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": ["warn", { "allow": ["error", "log"] }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-process-exit": "error",
    "no-var": "error",
    "prefer-const": "error"
  }
}
